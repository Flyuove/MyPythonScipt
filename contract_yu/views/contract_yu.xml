<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.actions.act_window" id="yu_contract_action_view">
      <field name="name">Contract</field>
      <field name="res_model">yu.contract</field>
      <field name="view_model">tree</field>
    </record>

    <record model="ir.ui.view" id="yu_contract_form_view">
      <field name="name">contract.form</field>
      <field name="model">yu.contract</field>
      <field name="arch" type="xml">
	 <form string="Contract">
    <sheet>
    <group>
	<group>
        <field name="name"/>
        <field name="code"/>
        <field name="user_id"/>
        <field name="vendor"  context="{'default_is_company':1, 'default_customer': 0, 'search_default_supplier': 1, 'default_supplier': 1}" />
        </group>
	<group>
        <field name="startDate"/>
        <field name="endDate"/>
        <field name="type"/>
        <field name="description"/>
        </group>
    </group>
    </sheet>
	</form>
      </field>
    </record>

    <record model="ir.ui.view" id="yu_contract_tree_view">
      <field name="name">contract.tree</field>
      <field name="model">yu.contract</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="code"/>
          <field name="vendor"/>
          <field name="user_id"/>
        </tree>
      </field>
    </record>

    <menuitem name="合同管理" id="contract_yu_contract" parent="hr_expense.menu_hr_expense_configuration"
 action="yu_contract_action_view"  sequence="20"/>

  </data>
</odoo>
